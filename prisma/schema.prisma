// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id           String  @id @default(uuid())
    registration String
    category     String
    name         String
    telephone    String
    pendency     Boolean @default(false)
    email        String  @unique
    password     String
    Loan         Loan[]

    @@map("Users")
}

model Book {
    id     String  @id @default(uuid())
    ISBN   String  @unique
    title  String
    author String
    year   String
    cover  String?
    Loan   Loan?   @relation(fields: [loanId], references: [id])
    loanId String?
    ADM    ADM?    @relation(fields: [aDMId], references: [id])
    aDMId  String?

    @@map("Books")
}

model Loan {
    id        String    @id @default(uuid())
    startDate DateTime
    endDate   DateTime?
    book      Book[]
    user      User      @relation(fields: [userId], references: [id])
    userId    String
    sinceLoan String

    @@map("Loans")
}

model ADM {
    id       String @id @default(uuid())
    username String @unique
    password String
    books    Book[]
}
